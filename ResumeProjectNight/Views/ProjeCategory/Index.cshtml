
@model List<ResumeProjectNight.Entities.ProjectCategory>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Adminlayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Proje Kategori Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">Kategorilerle ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/ProjeCategory/AddProjectCategory/"
               class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                Yeni Kategori Girişi
            </a>
        </div>

        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-900/50">
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Kategori Adı</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Sil</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-800/30 transition-colors group">
                                <td class="px-6 py-5">@item.CategoryId</td>
                                <td class="px-6 py-5">@item.CategoryName</td>
                                <td class="px-6 py-5">
                                    <a href="/ProjeCategory/DeleteProjectCategory/@item.CategoryId"
                                       class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded font-bold transition-colors shadow">
                                        Sil
                                    </a>
                                </td>
                                <td class="px-6 py-5">
                                    <a href="/ProjeCategory/UpdateProjectCategory/@item.CategoryId"
                                       class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-bold transition-colors shadow">
                                        Güncelle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="px-6 py-4 bg-slate-900/30 flex items-center justify-between border-t border-slate-800">
                <span class="text-slate-500 text-xs font-medium uppercase tracking-wider">Toplam @Model.Count adet kategori listeleniyor</span>
                <div class="flex gap-2">
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">Önceki</button>
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">Sonraki</button>
                </div>
            </div>
        </div>
    </div>
</div>

