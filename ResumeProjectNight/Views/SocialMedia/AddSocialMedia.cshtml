@model ResumeProjectNight.Entities.SocialMedia

@{
    ViewData["Title"] = "Sosyal Medya Ekle";
    Layout = "~/Views/Adminlayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Sosyal Medya Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">Yeni sosyal medya hesabı ekleyin.</p>
            </div>
            <a href="/SocialMedia/Index/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <div class="space-y-2">
                        <label for="IconClass" class="block text-sm font-semibold text-slate-300">
                            Icon Class
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">code</span>
                            <input type="text"
                                   id="IconClass"
                                   asp-for="IconClass"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: fab fa-instagram"
                                   required />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label for="Url" class="block text-sm font-semibold text-slate-300">
                            Url
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">link</span>
                            <input type="text"
                                   id="Url"
                                   asp-for="Url"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: https://instagram.com/username"
                                   required />
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label for="SortOrder" class="block text-sm font-semibold text-slate-300">
                                Sıra
                            </label>
                            <div class="relative">
                                <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">sort</span>
                                <input type="number"
                                       id="SortOrder"
                                       asp-for="SortOrder"
                                       class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                       placeholder="Örn: 1" />
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label for="IsActive" class="block text-sm font-semibold text-slate-300">
                                Aktif
                            </label>
                            <div class="flex items-center gap-3 bg-slate-900/50 border border-slate-700 rounded-lg px-4 py-3">
                                <input type="checkbox"
                                       id="IsActive"
                                       asp-for="IsActive"
                                       class="h-4 w-4 text-primary bg-slate-900 border-slate-700 rounded" />
                                <span class="text-slate-300 text-sm">Göster</span>
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Kaydet
                        </button>
                        <a href="/SocialMedia/Index/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

