
@model ResumeProjectNight.Entities.About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Adminlayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Projeyi Güncelle</h3>
                <p class="text-slate-400 text-sm mt-1">Proje bilgilerini güncellemek için aşağıdaki formu düzenleyin.</p>
            </div>
            <a href="/About/Index/" class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size: 20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">
                    <input type="hidden" asp-for="AboutId" />

                    <div class="space-y-2">
                        <label for="NameSurname" class="block text-sm font-semibold text-slate-300">
                            Ad Soyad
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">title</span>
                            <input type="text"
                                   id="NameSurname"
                                   asp-for="NameSurname"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: Kişisel Portföy Sitesi"
                                   required />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label for="ImageUrl" class="block text-sm font-semibold text-slate-300">
                            Görsel URL
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500" style="font-size: 20px;">image</span>
                            <input type="text"
                                   id="ImageUrl"
                                   asp-for="ImageUrl"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                                   placeholder="Örn: https://example.com/image.jpg"
                                   required />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label for="Description" class="block text-sm font-semibold text-slate-300">
                            Hakkımda
                            <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-4 material-symbols-outlined text-slate-500" style="font-size: 20px;">description</span>
                            <textarea id="Description"
                                      asp-for="Description"
                                      rows="5"
                                      class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
                                      placeholder="Kısa bir hakkımda metni girin"
                                      required></textarea>
                        </div>
                    </div>

                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size: 20px;">save</span>
                            Değişiklikleri Kaydet
                        </button>
                        <a href="/About/Index/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size: 20px;">close</span>
                            İptal Et
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

